@page
@model InstPlusEntityFr.Pages.ProfilPrywatny.IndexModel
@{
}

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ZdjecieProfilowe))
{
    <div style="text-align: left">
        <form>
            <img class="img" id="previewImage" src=@Url.Content(@Model.ZdjecieProfilowe) alt="Zdjecie profilowe" width="100" height="100" />
            <input type="file" accept="image/*" name="UploadedImage" />
            <input type="submit" value="ZMIEŃ ZDJĘCIE PROFILOWE >" asp-page-handler="ZmienZdjecie" />
        </form>
        <br>
        <label class="display-8">@Model.LoginUzytkownika</label>
    </div> 
}