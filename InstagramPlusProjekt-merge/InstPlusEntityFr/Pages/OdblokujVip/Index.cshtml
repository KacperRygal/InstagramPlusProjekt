                <input type="submit" value="POTWIERDŹ >" asp-page-handler="PotwierdzKodBtn" />
            </form>
        </div>
        <div style="text-align: right">
            <form asp-page-handler="AnulujBtn">
                <input type="submit" value="ANULUJ" asp-page-handler="AnulujBtn" />
            </form>
        </div>
    </p>
</div>